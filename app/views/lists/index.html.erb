<div class="cover mb-4 d-flex align-items-center justify-content-center bg-dark" style="background-image: url('<%= asset_path('cover.jpg') %>'); background-size: cover; background-position: absolute; bottom: 0;; background-attachment: fixed; height: 300px;">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0" style="color: white;">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="card bg-dark text-white" data-aos="zoom-in" style="position: relative;">
            <%= image_tag 'list_background.jpg', class: "card-img", alt: "List Background", style: "box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);" %>
            <div class="card-img-overlay d-flex flex-column justify-content-center" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5);">
              <h5 class="card-title text-center mb-0" style="color: white;"><%= list.name %></h5>
            </div>
            <div class="position-absolute top-0 end-0 m-3">
              <%= link_to list_path(list), method: :delete, class: "p-2 rounded-circle text-secondary text-decoration-none", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } do %>
                <i class="fas fa-times fa-lg"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
